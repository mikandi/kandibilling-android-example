    <!-- ONETAP -->
    <style name="Theme.MiKandi.Onetap.Text" parent="android:style/Widget.TextView">
        <item name="android:textSize">@dimen/onetap_header_size</item>
        <item name="android:paddingTop">@dimen/card_component_separator_larger</item>
        <item name="android:paddingBottom">@dimen/card_component_separator_larger</item>
        <item name="android:textColor">@color/grey_light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.MiKandi.Onetap.Text.Helper"><!-- helper for the component below -->
        <item name="android:paddingTop">@dimen/onetap_helper_padding</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textSize">@dimen/onetap_helper_size</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="Theme.MiKandi.Onetap.Text.Helper.Bottom"> <!-- helper for the component above -->
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">@dimen/onetap_helper_padding</item>
