    <style name="MiKandiTheme.Button" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/btn_grey</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingLeft">6dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:paddingBottom">8dip</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- Resource is not a Drawable (color or path): TypedValue{t=0x1/d=0x7f0a0058 a=1 r=0x7f0a0058} -->

    <style name="MiKandiTheme.Button.Green">
        <item name="android:background">@drawable/btn_green</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">6dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:paddingBottom">8dip</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MiKandiTheme.Button.Green.Account">
        <item name="android:paddingTop">@dimen/acc_button_main_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/acc_button_main_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/acc_button_main_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/acc_button_main_horizontal_padding</item>
        <item name="android:textSize">@dimen/acc_button_main_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MiKandiTheme.Button.Transparent">
        <item name="android:background">@drawable/btn_transparent_without_border</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/acc_button_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/acc_button_horizontal_padding</item>
        <item name="android:paddingBottom">@dimen/acc_button_vertical_padding</item>
        <item name="android:paddingTop">@dimen/acc_button_vertical_padding</item>
        <item name="android:textSize">@dimen/acc_button_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

